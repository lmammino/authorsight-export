{
  "name": "authorsight-export",
  "version": "0.0.1",
  "description": "A CLI utility that allows you to export books sales data from Packt AuthorSight for your own historic backup and analysis",
  "main": "dist/cli.js",
  "type": "module",
  "scripts": {
    "build": "tsc && chmod +x dist/cli.js",
    "lint:fix": "biome check --write .",
    "test:lint": "biome check .",
    "test:typecheck": "tsc --noEmit",
    "test": "npm run test:lint && npm run test:typecheck"
  },
  "files": [
    "dist"
  ],
  "bin": {
    "authorsight-export": "dist/cli.js"
  },
  "author": {
    "name": "Luciano Mammino",
    "email": "lucianomammino@gmail.com",
    "url": "http://loige.co"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lmammino/authorsight-export"
  },
  "bugs": {
    "url": "https://github.com/lmammino/authorsight-export/issues"
  },
  "license": "MIT",
  "engines": {
    "node": ">=22"
  },
  "keywords": [
    "Packt",
    "AuthorSight",
    "export",
    "books",
    "sales",
    "data",
    "CLI"
  ],
  "devDependencies": {
    "@biomejs/biome": "2.0.0",
    "@types/node": "^24.0.3",
    "lefthook": "^1.11.14",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "axios": "^1.10.0",
    "axios-cookiejar-support": "^6.0.2",
    "cli-progress": "^3.12.0",
    "commander": "^14.0.0",
    "dayjs": "^1.11.13",
    "node-html-parser": "^7.0.1",
    "tough-cookie": "^5.1.2"
  }
}
